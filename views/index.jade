extends layout

block content
  h1 Suggestion Box

  div(ng-repeat="post in posts")
    h3 {{post.title}}
    span.glyphicon.glyphicon-plus-sign(ng-click="upVote(post)")
    p Upvotes: {{post.upvotes}}

  form(ng-submit="addSuggestion()", style="margin-top: 50px")
    h3 Submit a Suggestion
    div.form-group
      input.form-control(type="text", placeholder="Great ideas here", ng-model="title")
    button.btn.btn-primary(type="submit") Suggestion
  
  //Modules
  script(type="text/javascript", src="js/app.js")

  //Controllers
  script(type="text/javascript", src="js/controllers/HomeController.js")

  //Services
  script(type="text/javascript", src="js/services/suggestion.js")
  